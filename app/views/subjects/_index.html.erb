<% content_for(:title, @subject.title) %>
<h1><%= @subject.title %></h1>

<% if @lessons.any? %>
  <h4>Here are your Lessons:</h4>

  <ul>
    <% @lessons.each do |lesson| %>
      <li>
        <%= link_to lesson.title, subject_path(lesson)%>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no lesson yet!</p>
<% end %>
